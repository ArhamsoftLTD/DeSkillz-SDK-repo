<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/background_layout_white_rounded"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_marginTop="8dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/size_100dp"
            android:layout_height="@dimen/size_100dp"
            android:background="@drawable/gradient_purple"
            android:src="@drawable/onedollarlarge"
            android:padding="@dimen/size_20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/h2habove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tournName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titan_one_regular"
                    android:maxLines="1"
                    android:text="Tournament Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18sp" />

                <TextView
                    android:id="@+id/userStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/titan_one_regular"
                    android:text="Game is in Progress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="vs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:id="@+id/playerFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="abcd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h2habove"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Prize $8"
                    android:textColor="#29DB96" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/gray_text"/>

                <TextView
                    android:id="@+id/player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/gray_text"/>

                <TextView
                    android:id="@+id/entryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="5dp"
                    android:text="Entry $9"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No Data"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:visibility="gone" />


</LinearLayout>